<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
	version="3.1">
	
	<display-name>webapp-bs-it</display-name>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<listener>
		<listener-class>org.dew.webapp.web.SessionListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>InitBackEnd</servlet-name>
		<servlet-class>org.dew.webapp.web.InitBackEnd</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>WebLogFiles</servlet-name>
		<servlet-class>org.dew.webapp.web.WebLogFiles</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebASLogFiles</servlet-name>
		<servlet-class>org.dew.webapp.web.WebASLogFiles</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebLogin</servlet-name>
		<servlet-class>org.dew.webapp.web.WebLogin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebActivate</servlet-name>
		<servlet-class>org.dew.webapp.web.WebActivate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebUpdatePassword</servlet-name>
		<servlet-class>org.dew.webapp.web.WebUpdatePassword</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebResetPassword</servlet-name>
		<servlet-class>org.dew.webapp.web.WebResetPassword</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebContratti</servlet-name>
		<servlet-class>org.dew.webapp.web.WebContratti</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebToken</servlet-name>
		<servlet-class>org.dew.webapp.web.WebToken</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebUpload</servlet-name>
		<servlet-class>org.dew.webapp.web.WebUpload</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebAttachment</servlet-name>
		<servlet-class>org.dew.webapp.web.WebAttachment</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WebRPC</servlet-name>
		<servlet-class>org.dew.webapp.web.WebRPC</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>InitBackEnd</servlet-name>
		<url-pattern>/init</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebLogFiles</servlet-name>
		<url-pattern>/log/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebASLogFiles</servlet-name>
		<url-pattern>/aslog/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebLogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebActivate</servlet-name>
		<url-pattern>/activate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebUpdatePassword</servlet-name>
		<url-pattern>/updatePassword</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebResetPassword</servlet-name>
		<url-pattern>/resetPassword</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebContratti</servlet-name>
		<url-pattern>/contratti/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebToken</servlet-name>
		<url-pattern>/token</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebUpload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebAttachment</servlet-name>
		<url-pattern>/attachment/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WebRPC</servlet-name>
		<url-pattern>/rpc/*</url-pattern>
	</servlet-mapping>
	
</web-app>
